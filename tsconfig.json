{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node",
    // generated JS doesn't (currently) have type annotations,
    // so `any` is inferred in a lot of places :/
    "noImplicitAny": false
  },
  "include": [
    // compiled sources
    "dist/*",
    // foreign sources
    "ditto-src/**/*.js"
  ]
}
